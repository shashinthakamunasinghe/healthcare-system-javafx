            <Label id="patientText" style="-fx-font-size: 22px;" text="Patient Portal" />
            <Button minHeight="40" minWidth="200" onAction="#handleBookAppointment" text="Book Appointment" />
            <Button minHeight="40" minWidth="200" onAction="#viewDoctors" text="View Doctors" />
            <Button minHeight="40" minWidth="200" onAction="#viewAppointment" text="View My Appointments" />
            <Button minHeight="40" minWidth="200" onAction="#backToMainMenu" text="Back" />
        </VBox>
    </children>
</AnchorPane>

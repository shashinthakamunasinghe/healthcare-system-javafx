<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controllers.AddPatientController">
    <children>
        <VBox alignment="CENTER" layoutX="150.0" layoutY="58.0" spacing="10">
            <Label fx:id="addPatientTitle" style="-fx-font-size: 20px;" text="Add New Patient" />
            <TextField fx:id="txtName" prefWidth="300.0" promptText="Name" />
            <TextField fx:id="txtId" prefWidth="300" promptText="ID" />
            <DatePicker fx:id="dateBirthday" prefWidth="300" promptText="Birthday" />
            <ComboBox fx:id="comboGender" prefWidth="300" promptText="Gender" />
            <TextField fx:id="txtContact" prefWidth="300" promptText="Contact Number" />
            <Button onAction="#savePatient" prefWidth="200" text="Save" id="btn"/>
            <Button onAction="#goBack" prefWidth="200" text="Back" id="btn"/>
        </VBox>
    </children>
</AnchorPane>

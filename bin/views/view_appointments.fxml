<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewAppointmentsController">
    <children>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" prefHeight="350.0" prefWidth="550.0" spacing="10">
            <Label fx:id="appointmentTitle" style="-fx-font-size: 20px;" text="All Appointments" />
            <TableView fx:id="tableAppointments" prefHeight="250" prefWidth="653.0">
                <columns>
                    <TableColumn fx:id="colDoctorName" prefWidth="120" text="Doctor Name" />
                    <TableColumn fx:id="colDoctorId" prefWidth="100" text="Doctor ID" />
                    <TableColumn fx:id="colPatientName" prefWidth="120" text="Patient Name" />
                    <TableColumn fx:id="colPatientId" prefWidth="100" text="Patient ID" />
                    <TableColumn fx:id="colAppointmentDate" prefWidth="120" text="Date" />
                    <TableColumn fx:id="colAppointmentTime" prefWidth="80" text="Time" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
            <Button id="btn" onAction="#goBack" prefWidth="150" text="Back" />
        </VBox>
    </children>
</AnchorPane>
